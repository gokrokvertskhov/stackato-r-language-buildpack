#!/usr/bin/env bash

# bin/compile <build-dir> <cache-dir> <env-dir>
# fail hard
set -o pipefail
# fail harder
set -eu
# move hidden files too, just in case
shopt -s dotglob
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
BUILD_DIR=$1
CACHE_DIR=$2
mkdir -p "$CACHE_DIR"
ENV_DIR=${3:-} # Anvil has none
ROOT_DIR=$(cd $(dirname $0); cd ..; pwd)

push $BUILD_DIR
tar xzf $BIN_DIR/../R-package.tgz
